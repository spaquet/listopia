<!-- app/views/message_templates/_user_profile.html.erb
     User profile card template for displaying user information in chat
-->
<% user_data = data %>
<div class="bg-linear-to-r from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-200">
  <div class="flex items-center gap-3">
    <!-- Avatar -->
    <div class="w-12 h-12 bg-linear-to-br from-blue-500 to-indigo-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
      <%= user_data[:name]&.first&.upcase || "?" %>
    </div>
    <!-- User Info -->
    <div class="flex-1">
      <h3 class="font-semibold text-gray-900"><%= user_data[:name] %></h3>
      <p class="text-sm text-gray-600"><%= user_data[:email] %></p>
    </div>
  </div>
  <!-- Stats -->
  <div class="mt-3 pt-3 border-t border-blue-200 grid grid-cols-2 gap-3 text-sm">
    <div class="bg-white rounded px-2 py-1">
      <span class="text-gray-600 block text-xs font-medium">Lists</span>
      <span class="font-semibold text-gray-900 text-lg"><%= user_data[:lists_count] || 0 %></span>
    </div>
    <div class="bg-white rounded px-2 py-1">
      <span class="text-gray-600 block text-xs font-medium">Teams</span>
      <span class="font-semibold text-gray-900 text-lg"><%= user_data[:teams_count] || 0 %></span>
    </div>
  </div>
</div>
