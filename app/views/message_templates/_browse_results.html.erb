<!-- app/views/message_templates/_browse_results.html.erb
     Displays browsable list of all lists in organization
     Allows filtering by status (active, draft, archived, completed)
-->

<div class="space-y-4">
  <!-- Header -->
  <div class="border-b border-gray-200 pb-2 mb-3">
    <h3 class="font-medium text-sm text-gray-900">
      Lists
      <% if data[:filter] && data[:filter] != "all" %>
        <span class="text-xs text-gray-500">(<%= data[:filter] %>, <%= data[:total_count] %>)</span>
      <% else %>
        <span class="text-xs text-gray-500">(<%= data[:total_count] %>)</span>
      <% end %>
    </h3>
  </div>

  <!-- Empty State -->
  <% if data[:lists].empty? %>
    <div class="bg-gray-50 rounded-lg p-6 text-center">
      <p class="text-gray-600">
        No lists found<% if data[:filter] && data[:filter] != "all" %> with status "<%= data[:filter] %>"<% end %>.
      </p>
      <p class="text-sm text-gray-500 mt-2">
        Try creating a new list or adjust your filter.
      </p>
    </div>
  <% else %>
    <!-- Lists Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 max-h-96 overflow-y-auto">
      <% data[:lists].each do |list| %>
        <a href="<%= list[:url] %>"
           class="block p-3 border border-gray-200 rounded-lg hover:border-blue-400 hover:shadow-sm transition-all bg-white">

          <!-- Line 1: Status and Last Updated -->
          <div class="flex items-center justify-between gap-2 mb-2">
            <!-- Status Badge (left) -->
            <% badge_class = case list[:status]
              when 'active' then 'bg-green-100 text-green-800'
              when 'draft' then 'bg-yellow-100 text-yellow-800'
              when 'completed' then 'bg-blue-100 text-blue-800'
              when 'archived' then 'bg-gray-100 text-gray-800'
              else 'bg-gray-100 text-gray-800'
            end %>
            <span class="text-xs font-medium px-2 py-1 rounded whitespace-nowrap <%= badge_class %>">
              <%= list[:status] %>
            </span>
            <!-- Last Updated (right, small) -->
            <span class="text-xs text-gray-400 ml-auto"><%= list[:updated_at] %></span>
          </div>

          <!-- Line 2: List Title (truncated) -->
          <h4 class="font-semibold text-sm text-gray-900 truncate mb-2">
            <%= list[:title] %>
          </h4>

          <!-- Line 3: Items Count and Completion -->
          <div class="flex items-center justify-between text-xs text-gray-600">
            <span><%= list[:items_count] %> item<% if list[:items_count].to_i == 1 %><% else %>s<% end %></span>
            <% if list[:completed_count].present? && list[:items_count].to_i > 0 %>
              <% completion_percent = ((list[:completed_count].to_f / list[:items_count].to_f) * 100).round %>
              <span class="text-gray-500"><%= completion_percent %>% complete</span>
            <% end %>
          </div>
        </a>
      <% end %>
    </div>
  <% end %>
</div>
