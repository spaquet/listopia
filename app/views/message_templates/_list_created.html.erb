<!-- app/views/message_templates/_list_created.html.erb
     Template for confirming list creation
-->

<% list_data = data %>
<div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-4 border border-green-200">
  <div class="flex items-start justify-between">
    <div class="flex items-start gap-3 flex-1">
      <!-- Icon -->
      <div class="text-2xl pt-1">âœ¨</div>

      <!-- Content -->
      <div class="flex-1">
        <h3 class="font-semibold text-gray-900">List Created</h3>
        <p class="text-sm text-gray-600 mt-1">
          <a href="<%= list_data[:url] %>" class="text-green-600 hover:text-green-700 font-medium">
            <%= list_data[:title] %>
          </a>
        </p>

        <!-- Stats -->
        <div class="mt-2 flex items-center gap-3 text-xs text-gray-600">
          <span>ğŸ“ Ready to add items</span>
          <% if list_data[:item_count].to_i > 0 %>
            <span>ğŸ“Œ <%= list_data[:item_count] %> item<%= list_data[:item_count].to_i != 1 ? "s" : "" %></span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Action Button -->
    <% if list_data[:url].present? %>
      <a href="<%= list_data[:url] %>"
         class="ml-2 px-3 py-1.5 bg-green-600 text-white text-xs font-medium rounded hover:bg-green-700 transition-colors whitespace-nowrap">
        Open List
      </a>
    <% end %>
  </div>
</div>
