<!-- app/views/collaborators/_collaborator.html.erb -->
<div id="<%= dom_id(collaborator) %>" class="flex items-center justify-between py-2">
  <div class="flex items-center space-x-3">
    <div class="flex-shrink-0">
      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
        <span class="text-white text-sm font-medium">
          <%= collaborator.display_name.first.upcase %>
        </span>
      </div>
    </div>
    <div>
      <p class="text-sm font-medium text-gray-900"><%= collaborator.display_name %></p>
      <p class="text-xs text-gray-500"><%= collaborator.user.email %></p>
    </div>
  </div>
  <div class="flex items-center space-x-2">
    <!-- Permission Toggle -->
    <%= form_with model: collaborator, url: collaborator_path(collaborator), method: :patch, local: false, class: "inline-block" do |f| %>
      <%= f.select :permission,
            options_for_select([
              ['Read Only', 'read'],
              ['Read & Write', 'write']
            ], collaborator.permission),
            {},
            { class: "text-xs border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white",
              onchange: "this.form.submit();" } %>
    <% end %>
    <!-- Remove Button -->
    <%= button_to collaborator_path(collaborator),
          method: :delete,
          remote: true,
          form: { data: { confirm: "Are you sure you want to remove this collaborator?" } },
          class: "text-gray-400 hover:text-red-600 transition-colors duration-200 p-1 rounded hover:bg-red-50" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    <% end %>
  </div>
</div>