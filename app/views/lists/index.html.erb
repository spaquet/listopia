<!-- app/views/lists/index.html.erb -->
<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">My Lists</h1>
      <p class="text-gray-600 mt-1">Organize your thoughts, tasks, and projects</p>
    </div>
    <div class="mt-4 sm:mt-0 flex gap-2">
      <%= link_to dashboard_items_kanban_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
        </svg>
        Items Kanban
      <% end %>
    </div>
  </div>
  <!-- Filters and Search -->
  <%= render "lists/filters" %>
  <!-- Lists Container - Proper structure for Turbo Stream updates -->
  <% if @lists.any? %>
    <div id="lists-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @lists.each do |list| %>
        <%= turbo_frame_tag "list_card_#{list.id}" do %>
          <%= render "lists/list_card", list: list, current_user: current_user %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div id="lists-grid">
      <%= render "lists/empty_state" %>
    </div>
  <% end %>
</div>
<!-- Subscribe to real-time updates for this user's lists -->
<%= turbo_stream_from "user_lists_#{current_user.id}" %>