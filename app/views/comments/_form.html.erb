<!-- app/views/comments/_form.html.erb -->
<!-- Form to add a new comment to a commentable resource -->
<% if user_signed_in? %>
  <%= turbo_frame_tag "new_comment_form_#{commentable.class.name.downcase}_#{commentable.id}" do %>
    <%= form_with model: [commentable, comment], local: false, class: "space-y-3" do |f| %>
      <!-- Error Messages -->
      <% if comment.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-3">
          <div class="flex">
            <svg class="w-4 h-4 text-red-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <div class="ml-2 text-sm text-red-700">
              <% comment.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Comment Content Field -->
      <div>
        <label for="comment_<%= commentable.class.name.downcase %>_<%= commentable.id %>_content" class="block text-sm font-medium text-gray-700 mb-2">
          Add a comment
        </label>
        <%= f.text_area :content,
                        id: "comment_#{commentable.class.name.downcase}_#{commentable.id}_content",
                        rows: 3,
                        placeholder: "Share your thoughts...",
                        class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-vertical" %>
        <p class="mt-1 text-xs text-gray-500">Markdown formatting is supported</p>
      </div>
      <!-- Submit Button -->
      <div class="flex items-center justify-end">
        <%= f.submit "Add Comment", 
                     class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium text-sm" %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <!-- Login Prompt for Unauthenticated Users -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-center">
    <p class="text-sm text-gray-700">
      <%= link_to "Sign in", new_session_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
      to add a comment
    </p>
  </div>
<% end %>