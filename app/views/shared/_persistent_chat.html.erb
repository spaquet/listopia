<div id="persistent-chat" 
     class="fixed bottom-6 right-6 z-50" 
     data-controller="chat"
     data-chat-user-id-value="<%= current_user.id %>"
     data-chat-expanded-value="false"
     data-chat-context-value="<%= chat_context.to_json %>"
     data-chat-current-page-value="<%= controller_name %>#<%= action_name %>">
  <!-- Chat Toggle Button (when minimized) -->
  <div data-chat-target="toggleButton" 
       class="bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full p-4 shadow-xl hover:shadow-2xl transition-all duration-300 cursor-pointer hover:scale-105">
    <button data-action="click->chat#toggle" class="focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
    </button>
    <!-- Notification dot for new messages -->
    <div data-chat-target="notificationDot" 
         class="hidden absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full border-2 border-white animate-pulse"></div>
  </div>
  <!-- Chat Window -->
  <div data-chat-target="chatWindow" 
       class="bg-white rounded-xl shadow-2xl border border-gray-200 w-96 max-w-[90vw] h-[32rem] flex flex-col overflow-hidden backdrop-blur-sm transition-all duration-300"
       style="display: none;">
    <!-- Chat Header -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-4 flex items-center justify-between rounded-t-xl">
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <h3 class="font-semibold text-base tracking-tight">Listopia Assistant</h3>
        <div class="flex items-center space-x-1 text-xs opacity-75">
          <div class="w-2 h-2 bg-green-400 rounded-full"></div>
          <span>Online</span>
        </div>
      </div>
      <div class="flex items-center space-x-2">
        <!-- Export Chat -->
        <%= link_to "/chat/export", 
            class: "p-1.5 hover:bg-white hover:bg-opacity-20 rounded transition-colors duration-200",
            title: "Export chat" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        <% end %>
        <!-- Minimize -->
        <button data-action="click->chat#minimize" 
          class="p-1.5 hover:bg-white hover:bg-opacity-20 rounded transition-colors duration-200"
          title="Minimize">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
          </svg>
        </button>
        <!-- Close -->
        <button data-action="click->chat#toggle" 
          class="p-1.5 hover:bg-white hover:bg-opacity-20 rounded transition-colors duration-200"
          title="Close">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Chat Messages -->
    <div data-chat-target="messagesContainer" 
         id="chat-messages"
         class="flex-1 px-6 py-4 overflow-y-auto space-y-4 bg-gray-50">
      <!-- Welcome Message -->
      <div class="flex items-start space-x-3 mb-4">
        <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <div class="bg-white rounded-lg px-4 py-2.5 shadow-sm border max-w-[75%]">
          <p class="text-sm text-gray-700 leading-relaxed">Hi! I'm your Listopia assistant. I can help you create lists, add items, and manage your tasks.</p>
        </div>
      </div>
    </div>
    <!-- Typing Indicator -->
    <div data-chat-target="typingIndicator" 
         class="hidden px-6 py-3 border-t bg-white">
      <div class="flex items-center space-x-2 text-gray-500">
        <div class="flex space-x-1">
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.1s"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
        </div>
        <span class="text-xs font-medium">Assistant is typing...</span>
      </div>
    </div>
    <!-- Chat Input with stimulus-components -->
    <div class="px-6 py-4 border-t bg-white rounded-b-xl">
      <div data-controller="character-counter chat-keyboard" 
           data-action="chat:send->chat#sendMessage">
        <!-- Textarea with enhanced features -->
        <div class="relative">
          <textarea data-controller="textarea-autogrow"
                    data-character-counter-target="input"
                    data-chat-keyboard-target="textarea"
                    data-chat-target="messageInput"
                    data-action="focus->chat#hideNotificationDot"
                    placeholder="Ask me to create lists, add items... (Ctrl+Enter to send, Escape to clear)"
                    rows="1"
                    maxlength="1000"
                    class="w-full px-4 py-2.5 pr-20 border border-gray-300 rounded-lg resize-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm font-medium placeholder-gray-400 leading-5 transition-all duration-200 shadow-sm"
                    style="min-height: 42px;"></textarea>
          <!-- Send button -->
          <button type="button" 
                  data-chat-target="sendButton"
                  data-action="click->chat#sendMessage"
            class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-blue-600 text-white p-2 rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed shadow-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </button>
        </div>
        <!-- Character counter and keyboard shortcuts -->
        <div class="flex justify-between items-center mt-3 text-xs">
          <div class="flex items-center space-x-4 text-gray-500">
            <div class="flex items-center space-x-1">
              <kbd class="px-2 py-0.5 text-xs font-mono bg-gray-100 border border-gray-300 rounded">Ctrl</kbd>
              <span>+</span>
              <kbd class="px-2 py-0.5 text-xs font-mono bg-gray-100 border border-gray-300 rounded">Enter</kbd>
              <span class="ml-1">to send</span>
            </div>
            <div class="flex items-center space-x-1">
              <kbd class="px-2 py-0.5 text-xs font-mono bg-gray-100 border border-gray-300 rounded">Esc</kbd>
              <span class="ml-1">to clear</span>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <!-- Character counter -->
            <span data-character-counter-target="counter" 
                  class="text-gray-400 font-mono text-xs bg-gray-50 px-2 py-1 rounded border">
              0/1000
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>