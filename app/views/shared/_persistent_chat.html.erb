<!-- app/views/shared/_persistent_chat.html.erb -->
<div id="persistent-chat" 
     class="fixed bottom-6 right-6 z-50" 
     data-controller="chat"
     data-chat-user-id-value="<%= current_user.id %>"
     data-chat-expanded-value="false"
     data-chat-context-value="<%= chat_context.to_json %>"
     data-chat-current-page-value="<%= controller_name %>#<%= action_name %>">
  <!-- Chat Toggle Button (when minimized) -->
  <div data-chat-target="toggleButton" 
       class="bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full p-4 shadow-xl hover:shadow-2xl transition-all duration-300 cursor-pointer hover:scale-105">
    <button data-action="click->chat#toggle" class="focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
    </button>
    <!-- Notification dot for new messages -->
    <div data-chat-target="notificationDot" 
         class="hidden absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full border-2 border-white animate-pulse"></div>
  </div>
  <!-- Chat Window (when expanded) -->
  <div data-chat-target="chatWindow" 
       class="hidden bg-white rounded-xl shadow-2xl border border-gray-200 w-80 h-96 flex flex-col overflow-hidden backdrop-blur-sm">
    <!-- Chat Header -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-4 flex items-center justify-between rounded-t-xl">
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <h3 class="font-semibold">Listopia Assistant</h3>
      </div>
      <div class="flex items-center space-x-2">
        <button data-action="click->chat#minimize" 
          class="p-1 hover:bg-white hover:bg-opacity-20 rounded transition-colors duration-200">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
          </svg>
        </button>
        <button data-action="click->chat#toggle" 
          class="p-1 hover:bg-white hover:bg-opacity-20 rounded transition-colors duration-200">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Chat Messages -->
    <div data-chat-target="messagesContainer" 
         id="chat-messages"
         class="flex-1 p-4 overflow-y-auto space-y-3 bg-gray-50">
      <!-- Welcome Message -->
      <div class="flex items-start space-x-2">
        <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <div class="bg-white rounded-lg px-3 py-2 shadow-sm border max-w-xs">
          <p class="text-sm text-gray-700">Hi! I'm your Listopia assistant. I can help you create lists, add items, and manage your tasks. Try saying something like "Create a grocery list with milk, bread, and eggs"</p>
        </div>
      </div>
      <!-- Messages will be dynamically added here via Turbo Streams -->
    </div>
    <!-- Typing Indicator (hidden by default) -->
    <div data-chat-target="typingIndicator" 
         class="hidden px-4 py-2 border-t bg-white">
      <div class="flex items-center space-x-2 text-gray-500">
        <div class="flex space-x-1">
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.1s"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
        </div>
        <span class="text-xs">Assistant is typing...</span>
      </div>
    </div>
    <!-- Chat Input -->
    <div class="p-4 border-t bg-white rounded-b-xl">
      <%= form_with url: chat_messages_path, 
                    method: :post, 
                    data: { 
                      action: "submit->chat#sendMessage",
                      turbo: false,
                      chat_target: "messageForm"
                    },
                    class: "flex space-x-2" do |f| %>
        <%= f.text_field :message, 
                         placeholder: "Ask me to create lists, add items...",
                         data: { 
                           chat_target: "messageInput",
                           action: "keydown->chat#handleKeydown"
                         },
                         class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        <button type="submit" 
                data-chat-target="sendButton"
                class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        </button>
      <% end %>
    </div>
  </div>
</div>