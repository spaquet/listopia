<!-- app/views/shared/_organization_switcher_modal.html.erb -->
<!-- Organization Switcher Modal -->
<div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 p-4"
     aria-labelledby="org-switcher-title"
     role="dialog"
     aria-modal="true">
  <!-- Modal Content -->
  <div class="bg-white rounded-lg text-left overflow-hidden shadow-xl w-full max-w-2xl">
    <!-- Header -->
    <div class="bg-linear-to-r from-blue-50 to-purple-50 px-4 py-6 sm:px-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-xl font-bold text-gray-900" id="org-switcher-title">
            Select Organization
          </h3>
          <p class="text-sm text-gray-600 mt-1">Switch between your organizations</p>
        </div>
        <button type="button"
                onclick="document.querySelectorAll('[id=org_switcher_modal]').forEach(el => el.innerHTML = '')"
          class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Organization List -->
    <div class="px-4 py-6 sm:px-6 max-h-96 overflow-y-auto">
      <% active_organizations = current_user.organizations.where(status: :active) %>
      <% if active_organizations.any? %>
        <div class="space-y-3">
          <% active_organizations.each do |org| %>
            <% membership = current_user.organization_membership(org) %>
            <% role = membership&.role %>
            <% is_current = current_organization && current_organization.id == org.id %>
            <form action="<%= switch_organizations_path %>" method="POST" class="group" data-turbo="true">
              <input type="hidden" name="_method" value="patch">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <input type="hidden" name="organization_id" value="<%= org.id %>">
              <button type="submit"
                      class="w-full flex items-stretch gap-4 p-4 rounded-lg border transition-all duration-200
                             <%= is_current ? 'border-blue-500 bg-blue-50 hover:bg-blue-100' : 'border-gray-200 bg-white hover:border-blue-300 hover:bg-gray-50' %>">
                <!-- Left Section: Avatar & Info -->
                <div class="flex items-center gap-3 flex-1 min-w-0">
                  <!-- Avatar -->
                  <div class="w-10 h-10 bg-linear-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-bold text-sm"><%= org.name.first.upcase %></span>
                  </div>
                  <!-- Text Info -->
                  <div class="flex-1 min-w-0 flex flex-col justify-center items-start">
                    <h4 class="text-sm font-semibold text-gray-900 truncate"><%= org.name %></h4>
                    <div class="flex items-center gap-2 flex-wrap">
                      <!-- Plan Size -->
                      <span class="text-xs text-gray-500"><%= org.size.titleize %></span>
                      <!-- Role Badge -->
                      <% if role %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                                   <%= case role
                                       when 'owner'
                                         'bg-purple-100 text-purple-800'
                                       when 'admin'
                                         'bg-blue-100 text-blue-800'
                                       else
                                         'bg-gray-100 text-gray-800'
                                       end %>">
                          <%= role.titleize %>
                        </span>
                      <% end %>
                      <!-- Current Badge -->
                      <% if is_current %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                          </svg>
                          Active
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </button>
            </form>
          <% end %>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4l2-3h2l2 3h4a2 2 0 012 2v14a2 2 0 01-2 2z"></path>
          </svg>
          <p class="mt-4 text-sm font-medium text-gray-900">No active organizations</p>
          <p class="mt-2 text-sm text-gray-500">You don't have any active organizations</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Loading Spinner Overlay (hidden by default) -->
<div id="org-switching-overlay" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
  <div class="bg-white rounded-lg shadow-xl p-8 text-center">
    <!-- Spinner -->
    <div class="inline-flex">
      <svg class="animate-spin h-12 w-12 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>
    <p class="mt-4 text-gray-700 font-medium">Switching organization...</p>
    <p class="text-sm text-gray-500 mt-1">Refreshing your view</p>
  </div>
</div>
<!-- Script to show spinner on form submission -->
<script>
  document.querySelectorAll('form[action="<%= switch_organizations_path %>"]').forEach(form => {
    form.addEventListener('submit', function() {
      const overlay = document.getElementById('org-switching-overlay');
      if (overlay) {
        overlay.classList.remove('hidden');
      }
    });
  });
</script>
