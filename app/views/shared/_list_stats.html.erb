<!-- app/views/shared/_list_stats.html.erb -->
<% stats = list_completion_stats(list) %>
<div id="list-stats" class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
  <!-- Completed Count -->
  <div class="flex items-center space-x-2">
    <div class="flex items-center">
      <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <span class="ml-2">
        <span class="font-bold text-gray-900"><%= stats[:completed] %></span>
        <span class="text-gray-600">of <%= stats[:total] %> completed</span>
      </span>
    </div>
  </div>
  <!-- Progress Percentage -->
  <div class="flex items-center space-x-2">
    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-100 to-blue-50 border-2 border-blue-200 flex items-center justify-center">
      <span class="font-bold text-blue-600 text-sm"><%= stats[:percentage] %>%</span>
    </div>
    <span class="text-gray-600">progress</span>
  </div>
  <!-- Remaining Items -->
  <div class="flex items-center space-x-2">
    <div class="flex items-center">
      <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      <span class="ml-2">
        <span class="font-bold text-gray-900"><%= stats[:total] - stats[:completed] %></span>
        <span class="text-gray-600">remaining</span>
      </span>
    </div>
  </div>
</div>