<!-- app/views/shared/_item_type_select.html.erb -->
<div data-controller="custom-select" 
     data-custom-select-name-value="<%= form_object_name %>[item_type]"
     data-custom-select-value-value="<%= current_value %>">
  <div class="relative">
    <button type="button"
            data-action="click->custom-select#toggle"
      data-custom-select-target="trigger"
      class="w-full h-11 px-3 py-2 text-left bg-white border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 flex items-center justify-between">
      <div class="flex items-center space-x-2" data-custom-select-target="selectedDisplay">
        <%= render 'shared/item_type_display', item_type: current_value %>
      </div>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <div data-custom-select-target="dropdown" 
         class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-64 overflow-y-auto">
      <div class="py-1">
        <!-- Core Planning Types -->
        <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wide bg-gray-50">Core Planning</div>
        <% %w[task goal milestone action_item waiting_for reminder].each do |type| %>
          <button type="button" 
                  data-action="click->custom-select#select" 
            data-value="<%= type %>" 
            class="w-full px-3 py-2 text-left hover:bg-gray-50 flex items-center space-x-2">
            <%= render 'shared/item_type_display', item_type: type %>
          </button>
        <% end %>
        <!-- Knowledge & Ideas -->
        <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wide bg-gray-50 border-t">Knowledge & Ideas</div>
        <% %w[idea note reference].each do |type| %>
          <button type="button" 
                  data-action="click->custom-select#select" 
            data-value="<%= type %>" 
            class="w-full px-3 py-2 text-left hover:bg-gray-50 flex items-center space-x-2">
            <%= render 'shared/item_type_display', item_type: type %>
          </button>
        <% end %>
        <!-- Personal Life Management -->
        <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wide bg-gray-50 border-t">Personal Life</div>
        <% %w[habit health learning travel shopping home finance social entertainment].each do |type| %>
          <button type="button" 
                  data-action="click->custom-select#select" 
            data-value="<%= type %>" 
            class="w-full px-3 py-2 text-left hover:bg-gray-50 flex items-center space-x-2">
            <%= render 'shared/item_type_display', item_type: type %>
          </button>
        <% end %>
      </div>
    </div>
    <!-- Hidden input for form submission -->
    <input type="hidden" 
           name="<%= form_object_name %>[item_type]" 
           data-custom-select-target="hiddenInput"
           value="<%= current_value %>">
  </div>
</div>