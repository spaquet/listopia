<!-- app/views/dashboard/index.html.erb -->
<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Welcome back, <%= current_user.name.split.first %>!</h1>
        <p class="text-gray-600 mt-1">Here's what's happening with your lists today.</p>
      </div>
      <div class="flex items-center space-x-2">
        <%= link_to dashboard_kanban_path,
                    class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          Board
        <% end %>
        <button class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
                onclick="document.querySelector('[data-unified-chat-target=messageInput]')?.focus()"
                title="Open Chat">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          Chat
        </button>
      </div>
    </div>
  </div>

  <!-- Main Content with Chat Sidebar -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column: Stats and Chat (2/3 width) -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Stats Overview -->
      <div id="dashboard-stats">
        <%= render "dashboard/stats_overview", stats: @stats %>
      </div>
      <!-- Unified Chat -->
      <div id="dashboard-chat">
        <% if @chat.present? && @chat_context.present? %>
          <%= render "chat/unified_chat",
                     chat: @chat,
                     context: @chat_context,
                     message_history: @messages %>
        <% end %>
      </div>
    </div>

    <!-- Right Column: Adaptive Sidebar (1/3 width) -->
    <div class="lg:col-span-1">
      <div id="dashboard-adaptive-sidebar">
        <%= render "dashboard/adaptive_sidebar",
                    adaptive_dashboard: @adaptive_dashboard,
                    current_user: current_user %>
      </div>
    </div>
  </div>
</div>
<!-- Subscribe to real-time updates for this user's dashboard -->
<%= turbo_stream_from "user_dashboard_#{current_user.id}" %>