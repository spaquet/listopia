<!-- app/views/dashboard/index.html.erb -->
<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Welcome back, <%= current_user.name.split.first %>!</h1>
        <p class="text-gray-600 mt-1">Here's what's happening with your lists today.</p>
      </div>
      <div class="flex items-center space-x-2">
        <%= link_to dashboard_kanban_path,
                    class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          Board View
        <% end %>
      </div>
    </div>
  </div>
  <!-- Stats Overview -->
  <div id="dashboard-stats">
    <%= render "dashboard/stats_overview", stats: @stats %>
  </div>
  <!-- Chat and Adaptive Sidebar -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Embedded Chat Interface (2/3 width) -->
    <div class="lg:col-span-2">
      <div id="dashboard-chat">
        <%= render "dashboard/embedded_chat" %>
      </div>
    </div>
    <!-- Adaptive Sidebar (1/3 width) -->
    <div class="space-y-6">
      <div id="dashboard-adaptive-sidebar">
        <%= render "dashboard/adaptive_sidebar", 
                    adaptive_dashboard: @adaptive_dashboard,
                    current_user: current_user %>
      </div>
    </div>
  </div>
</div>
<!-- Subscribe to real-time updates for this user's dashboard -->
<%= turbo_stream_from "user_dashboard_#{current_user.id}" %>