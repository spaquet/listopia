<!-- app/views/dashboard/_adaptive_recommendations.html.erb -->
<div class="space-y-3">
  <% if recommendations.any? %>
    <% recommendations.each_with_index do |rec, index| %>
      <a href="<%= list_path(rec[:list_id]) %>" class="group block p-3 bg-gradient-to-r <%= recommendation_gradient(rec[:score]) %> 
                  rounded-lg border border-gray-200 hover:border-blue-300 cursor-pointer 
                  transition-all hover:shadow-md">
        <!-- List Title and Ownership -->
        <div class="flex items-start justify-between mb-2">
          <div class="flex-1">
            <p class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate">
              <%= rec[:list_title] %>
            </p>
            <% if !rec[:is_owned] %>
              <p class="text-xs text-gray-500">
                by <%= rec[:list_owner] %>
              </p>
            <% end %>
          </div>
          <!-- Urgency Indicator -->
          <% if rec[:score] > 100 %>
            <span class="ml-2 inline-block w-2 h-2 bg-red-500 rounded-full animate-pulse" 
                  title="High priority"></span>
          <% elsif rec[:score] > 50 %>
            <span class="ml-2 inline-block w-2 h-2 bg-yellow-500 rounded-full" 
                  title="Medium priority"></span>
          <% end %>
        </div>
        <!-- Reason Tags -->
        <div class="flex flex-wrap gap-1 mb-3">
          <% rec[:reason].split(" â€¢ ").each do |reason_part| %>
            <span class="inline-block text-xs bg-white bg-opacity-60 text-gray-700 px-2 py-1 rounded">
              <%= reason_part %>
            </span>
          <% end %>
        </div>
        <!-- Progress Bar -->
        <div class="mb-3">
          <div class="flex items-center justify-between mb-1">
            <span class="text-xs font-medium text-gray-700">Progress</span>
            <span class="text-xs font-semibold text-gray-900"><%= rec[:completion_rate] %>%</span>
          </div>
          <div class="w-full bg-gray-300 bg-opacity-50 rounded-full h-1.5">
            <div class="bg-green-500 h-1.5 rounded-full transition-all" 
                 style="width: <%= rec[:completion_rate] %>%"></div>
          </div>
        </div>
        <!-- Stats Line -->
        <div class="flex items-center justify-between text-xs text-gray-600">
          <div class="flex space-x-3">
            <span>
              <span class="font-medium text-gray-900"><%= rec[:pending_count] %></span> pending
            </span>
            <% if rec[:collaborator_count] > 0 %>
              <span>
                <span class="font-medium text-gray-900"><%= rec[:collaborator_count] %></span> collab.
              </span>
            <% end %>
          </div>
          <!-- View Details Arrow -->
          <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-600 transition-colors" 
               fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
        <!-- Next Item Preview (if exists) -->
        <% if rec[:next_item] %>
          <div class="mt-3 pt-3 border-t border-gray-200 border-opacity-50">
            <p class="text-xs text-gray-600 mb-1">Next item:</p>
            <div class="flex items-start space-x-2">
              <div class="flex-shrink-0 w-4 h-4 rounded border border-gray-400 mt-0.5"></div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-gray-900 truncate">
                  <%= rec[:next_item][:title] %>
                </p>
                <% if rec[:next_item][:due_date] %>
                  <p class="text-xs text-gray-500">
                    Due <%= time_ago_in_words_or_date(rec[:next_item][:due_date]) %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </a>
    <% end %>
  <% else %>
    <div class="text-center py-8">
      <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <p class="text-sm text-gray-500 mb-3">All caught up!</p>
      <p class="text-xs text-gray-400">No urgent items right now.</p>
    </div>
  <% end %>
</div>