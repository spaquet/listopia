<!-- app/views/dashboard/_adaptive_actions.html.erb -->
<div class="space-y-3">
  <% if actions.any? %>
    <% actions.each do |action| %>
      <% case action[:type]
         when "create_list" %>
        <%= link_to new_list_path, 
                    class: "block p-4 rounded-lg border-2 border-dashed border-gray-300 hover:border-blue-500 hover:bg-blue-50 transition-all" do %>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= action[:label] %></p>
              <p class="text-xs text-gray-600"><%= action[:description] %></p>
            </div>
            <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        <% end %>
      <% when "add_item" %>
        <%= link_to new_list_item_path(action[:list_id]),
                    class: "block p-4 rounded-lg bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 hover:border-green-400 hover:shadow-md transition-all" do %>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= action[:label] %></p>
              <p class="text-xs text-gray-600"><%= action[:description] %></p>
            </div>
            <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        <% end %>
      <% when "mark_complete" %>
        <button type="button"
                data-controller="dashboard-action"
                data-action="click->dashboard-action#markComplete"
          data-item-id="<%= action[:item_id] %>"
          data-list-id="<%= action[:list_id] %>"
          class="w-full p-4 rounded-lg bg-gradient-to-r from-yellow-50 to-amber-50 border border-yellow-200 hover:border-yellow-400 hover:shadow-md transition-all text-left">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-yellow-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= action[:label] %></p>
              <p class="text-xs text-gray-600"><%= action[:description] %></p>
            </div>
            <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </button>
      <% when "view_list" %>
        <%= link_to list_path(action[:list_id]),
                    class: "block p-4 rounded-lg bg-gradient-to-r from-purple-50 to-pink-50 border border-purple-200 hover:border-purple-400 hover:shadow-md transition-all" do %>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= action[:label] %></p>
              <p class="text-xs text-gray-600"><%= action[:description] %></p>
            </div>
            <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        <% end %>
      <% when "invite_collaborator" %>
        <%= link_to list_collaborations_path(action[:list_id]),
                    class: "block p-4 rounded-lg bg-gradient-to-r from-indigo-50 to-blue-50 border border-indigo-200 hover:border-indigo-400 hover:shadow-md transition-all" do %>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 12H9m6 0a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= action[:label] %></p>
              <p class="text-xs text-gray-600"><%= action[:description] %></p>
            </div>
            <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        <% end %>
      <% when "chat_action" %>
        <button type="button"
                data-controller="modal"
                data-action="click->modal#open"
          data-modal-content-value="chat"
          class="w-full p-4 rounded-lg bg-gradient-to-r from-cyan-50 to-blue-50 border border-cyan-200 hover:border-cyan-400 hover:shadow-md transition-all text-left">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-cyan-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= action[:label] %></p>
              <p class="text-xs text-gray-600"><%= action[:description] %></p>
            </div>
            <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </button>
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center py-8">
      <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <p class="text-sm text-gray-500">No available actions</p>
    </div>
  <% end %>
</div>