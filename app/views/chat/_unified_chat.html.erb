<!-- app/views/chat/_unified_chat.html.erb
     Unified chat partial that adapts to different contexts (dashboard, floating, etc.)
     Handles both initial render and Turbo Stream updates
-->

<div id="unified-chat"
     data-controller="unified-chat"
     data-location="<%= context.location %>"
     data-chat-id="<%= chat.id %>"
     class="<%= context.ui_config[:position] %> <% if context.in_location?(:floating) %>shadow-2xl rounded-lg border border-gray-200<% end %>">

  <!-- Chat Container -->
  <div class="flex flex-col <%= context.ui_config[:chat_height] %> bg-white <% unless context.in_location?(:floating) %>rounded-lg border border-gray-200 shadow-sm<% end %>">

    <!-- Chat Header -->
    <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200">
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
        <h3 class="font-semibold text-gray-900">
          <% if context.focused_resource.present? %>
            Chat: <%= context.focused_resource_name %>
          <% else %>
            Listopia Assistant
          <% end %>
        </h3>
      </div>

      <% if context.ui_config[:show_new_chat_button] %>
        <%= button_to chats_path,
                      method: :post,
                      form_class: "inline",
                      class: "text-gray-500 hover:text-gray-700 transition-colors",
                      title: "New Chat" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        <% end %>
      <% end %>
    </div>

    <!-- Messages Container -->
    <div class="flex-1 overflow-y-auto p-4 space-y-4"
         data-unified-chat-target="messagesContainer">

      <% if message_history.blank? %>
        <!-- Empty State with Suggestions -->
        <div class="flex flex-col items-center justify-center h-full gap-4 text-center">
          <div class="text-4xl">ðŸ’¬</div>
          <h2 class="text-lg font-semibold text-gray-900">Start a Conversation</h2>
          <p class="text-gray-600 text-sm max-w-xs">
            <% if context.focused_resource.present? %>
              Ask me anything about <%= context.focused_resource_name %>, or use commands to get started.
            <% else %>
              Try asking me to help with your lists, search for content, or use commands below.
            <% end %>
          </p>

          <!-- Available Commands -->
          <div class="mt-4 space-y-2 w-full">
            <p class="text-xs text-gray-500 font-semibold">AVAILABLE COMMANDS:</p>
            <div class="grid gap-2">
              <% context.suggestions.each do |suggestion| %>
                <button class="text-left px-3 py-2 rounded-lg hover:bg-gray-100 transition-colors text-sm"
                        data-action="unified-chat#insertCommand"
                        data-command="<%= suggestion[:command] %>">
                  <span class="font-mono text-blue-600"><%= suggestion[:command] %></span>
                  <span class="text-gray-600 ml-2"><%= suggestion[:description] %></span>
                </button>
              <% end %>
            </div>

            <!-- Context Info -->
            <% if context.focused_resource.present? %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <p class="text-xs text-gray-500 font-semibold mb-2">CONTEXT:</p>
                <div class="bg-blue-50 rounded-lg p-3 text-sm">
                  <p class="text-gray-600">
                    Viewing <strong><%= context.focused_resource_name %></strong>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    Chat includes this context for smarter responses
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- Message History -->
        <% message_history.each do |message| %>
          <%= render "shared/chat_message", message: message, chat_context: context %>
        <% end %>
      <% end %>
    </div>

    <!-- Input Area -->
    <div class="border-t border-gray-200 p-4 bg-gray-50">
      <%= form_with url: create_message_chat_path(chat),
                     method: :post,
                     local: true,
                     class: "flex gap-2" do |f| %>
        <!-- Message Input -->
        <%= f.text_field :content,
                         placeholder: "Type a message or command (try /search, /help)...",
                         class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                         data: { unified_chat_target: "messageInput" },
                         autocomplete: "off" %>

        <!-- Submit Button -->
        <%= f.submit "",
                      class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed",
                      data: { unified_chat_target: "submitButton" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        <% end %>
      <% end %>

      <!-- Help Text -->
      <p class="text-xs text-gray-500 mt-2">
        Tip: Start with "/" to see available commands
      </p>
    </div>
  </div>
</div>
