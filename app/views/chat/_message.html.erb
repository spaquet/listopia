<!-- app/views/shared/_chat_message.html.erb -->
<%# Handles both ActiveRecord Message and RubyLLM::Message objects %>
<%
  # Get ID safely - RubyLLM messages might not have IDs
  message_id = message.respond_to?(:id) ? message.id : SecureRandom.uuid
  message_role = message.respond_to?(:role) ? message.role : 'assistant'
  message_content = message.respond_to?(:content) ? message.content : message.to_s

  # NEW: Get RAG sources from metadata
  rag_sources = message.respond_to?(:metadata) && message.metadata.present? ?
                message.metadata["rag_sources"] : nil
%>
<div class="flex items-start gap-3 mb-4 <%= 'justify-end' if message_role == 'user' %>"
     data-message-id="<%= message_id %>">
  <% if message_role != 'user' %>
    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center">
      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
    </div>
  <% end %>
  <div class="flex flex-col gap-2 max-w-[80%]">
    <div class="<%= message_role == 'user' ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-900' %>
                rounded-lg px-4 py-2">
      <%= simple_format(message_content) %>
    </div>

    <!-- NEW: RAG Sources Attribution -->
    <% if rag_sources.present? && message_role == 'assistant' %>
      <div class="text-xs text-gray-500 pl-0 border-l-2 border-gray-300">
        <div class="font-semibold mb-1">ğŸ“š Sources:</div>
        <ul class="list-disc list-inside space-y-0.5">
          <% rag_sources.each do |source| %>
            <li>
              <% if source["url"].present? %>
                <%= link_to source["title"], source["url"],
                    target: "_blank",
                    rel: "noopener noreferrer",
                    class: "text-blue-600 hover:text-blue-700 underline" %>
              <% else %>
                <%= source["title"] %>
              <% end %>
              <span class="text-gray-400">(<%= source["type"] %>)</span>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>