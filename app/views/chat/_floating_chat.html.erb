<!-- app/views/chat/_floating_chat.html.erb
     Floating chat widget that appears on all pages (bottom-right corner)
     Renders unified chat in a floating container that toggles between collapsed and expanded
     Uses the same chat instance as the dashboard for unified message history
-->

<div id="floating-chat-widget"
     data-controller="floating-chat"
     class="fixed bottom-6 right-6 z-50 flex flex-col items-end gap-3">

  <!-- Chat bubble indicator (collapsed state) -->
  <button id="floating-chat-toggle"
          data-action="floating-chat#toggle"
          data-floating-chat-target="toggleButton"
          class="floating-chat-toggle rounded-full bg-blue-600 text-white p-4 shadow-lg hover:bg-blue-700 transition-all duration-200"
          title="Open chat"
          aria-label="Open chat">
    <!-- Chat icon -->
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
  </button>

  <!-- Chat container (expanded state) with close button -->
  <div id="floating-chat-container"
       data-floating-chat-target="chatContainer"
       class="floating-chat-container hidden w-96 max-w-[90vw] rounded-lg shadow-2xl border border-gray-200 overflow-hidden bg-white flex flex-col"
       style="height: 500px;"
       aria-hidden="true">

    <!-- Close button (positioned at top-right) -->
    <button data-action="floating-chat#collapse"
            data-floating-chat-target="closeButton"
            class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 transition-colors z-10 p-1"
            title="Collapse chat"
            aria-label="Collapse chat">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Unified chat component wrapped for floating context -->
    <div class="flex-1 flex flex-col overflow-hidden">
      <%= render "chat/unified_chat",
                 chat: @floating_chat,
                 context: @floating_chat_context,
                 message_history: @floating_chat.present? ? @floating_chat.recent_messages(50) : [] %>
    </div>
  </div>
</div>

<style>
  /* Floating chat container positioning and animations */
  #floating-chat-container {
    position: relative;
    animation: slideIn 0.3s ease-out;
  }

  #floating-chat-container.hidden {
    animation: slideOut 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes slideOut {
    from {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    to {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
  }

  /* Hide toggle button when chat is open */
  .floating-chat-toggle.hidden {
    display: none;
  }

  /* Adjust unified chat for floating context */
  #floating-chat-container #unified-chat {
    display: flex;
    flex-direction: column;
    height: 100%;
    position: static !important;
    width: 100% !important;
  }

  #floating-chat-container #unified-chat > div:first-child {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
</style>
