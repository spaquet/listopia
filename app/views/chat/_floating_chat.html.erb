<!-- app/views/chat/_floating_chat.html.erb
     Floating chat widget that appears on all pages (bottom-right corner)
     Toggles between collapsed and expanded states
-->

<div id="floating-chat-widget"
     data-controller="floating-chat"
     class="fixed bottom-6 right-6 z-50 flex flex-col items-end gap-3">

  <!-- Chat bubble indicator (collapsed state) -->
  <button id="floating-chat-toggle"
          data-action="floating-chat#toggle"
          data-floating-chat-target="toggleButton"
          class="floating-chat-toggle rounded-full bg-blue-600 text-white p-4 shadow-lg hover:bg-blue-700 transition-all duration-200"
          title="Open chat"
          aria-label="Open chat">
    <!-- Chat icon -->
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
  </button>

  <!-- Chat container (expanded state) -->
  <div id="floating-chat-container"
       data-floating-chat-target="chatContainer"
       class="floating-chat-container hidden w-96 max-w-[90vw] rounded-lg shadow-2xl border border-gray-200 overflow-hidden bg-white"
       style="height: 500px;">

    <!-- Chat Header with close button -->
    <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 bg-gray-50">
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
        <h3 class="font-semibold text-gray-900 text-sm">Listopia Assistant</h3>
      </div>
      <button data-action="floating-chat#collapse"
              data-floating-chat-target="closeButton"
              class="text-gray-500 hover:text-gray-700 transition-colors"
              title="Collapse chat"
              aria-label="Collapse chat">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Chat Messages Container -->
    <div class="flex-1 overflow-y-auto p-4 space-y-4"
         data-unified-chat-target="messagesContainer">
      <!-- Messages will be loaded here -->
      <div class="flex flex-col items-center justify-center h-full gap-2 text-center">
        <div class="text-3xl">ðŸ’¬</div>
        <p class="text-sm text-gray-600">Start a conversation</p>
        <p class="text-xs text-gray-500">Ask anything or use commands</p>
      </div>
    </div>

    <!-- Input Area -->
    <div class="border-t border-gray-200 p-3 bg-gray-50">
      <div class="flex gap-2">
        <!-- Message Input -->
        <input type="text"
               id="floating-message-input"
               data-unified-chat-target="messageInput"
               data-action="keydown->unified-chat#submitOnEnter"
               placeholder="Type a message..."
               class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
               autocomplete="off">

        <!-- Submit Button -->
        <button data-action="unified-chat#submitMessage"
                data-unified-chat-target="submitButton"
                class="px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                title="Send message">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  /* Floating chat animations */
  .floating-chat-container {
    animation: slideIn 0.3s ease-out;
  }

  .floating-chat-container.hidden {
    animation: slideOut 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes slideOut {
    from {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    to {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
  }

  /* Hide toggle button when chat is open */
  .floating-chat-toggle.hidden {
    display: none;
  }
</style>
