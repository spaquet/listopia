<!-- app/views/admin/organizations/index.html.erb -->
<%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<div class="max-w-7xl mx-auto space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Organization Management</h1>
      <p class="text-gray-600 mt-1">Manage all organizations and their members</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to admin_root_path, class: "text-gray-600 hover:text-gray-900 px-4 py-2 rounded-lg border border-gray-300 hover:border-gray-400 transition-colors" do %>
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Total Organizations</p>
          <p class="text-2xl font-bold text-gray-900 mt-1"><%= @total_organizations %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4l2-3h2l2 3h4a2 2 0 012 2v14a2 2 0 01-2 2z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9h6v6H9z"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Active Organizations</p>
          <p class="text-2xl font-bold text-green-600 mt-1"><%= Organization.where(status: :active).count %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Suspended</p>
          <p class="text-2xl font-bold text-yellow-600 mt-1"><%= Organization.where(status: :suspended).count %></p>
        </div>
        <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Enterprise Plans</p>
          <p class="text-2xl font-bold text-purple-600 mt-1"><%= Organization.where(size: :enterprise).count %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters & Search -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6"
       data-controller="organization-filter"
       data-organization-filter-debounce-delay="300">
    <%= form_with url: admin_organizations_path, method: :get, local: true, class: "space-y-4", data: { organization_filter_target: "form" }, id: "organization-filter-form" do |f| %>
      <!-- Search Bar -->
      <div class="flex items-center gap-3">
        <div class="flex-1 relative" data-turbo-permanent id="search-field-container">
          <svg class="absolute left-3 top-3 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <%= f.text_field :query,
              placeholder: "Search by name or slug...",
              class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors",
              data: {
                organization_filter_target: "query",
                action: "input->organization-filter#searchInput"
              },
              autocomplete: "off",
              spellcheck: "false",
              value: @filters[:query] %>
        </div>
      </div>

      <!-- Filters Row -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Status Filter -->
        <div>
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :status,
              options_for_select(
                [["All Statuses", ""], ["Active", "active"], ["Suspended", "suspended"], ["Deleted", "deleted"]],
                @filters[:status]
              ),
              { include_blank: false },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors",
              data: {
                organization_filter_target: "status",
                action: "change->organization-filter#filterChange"
              } %>
        </div>

        <!-- Size Filter -->
        <div>
          <%= f.label :size, "Plan Size", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :size,
              options_for_select(
                [["All Sizes", ""], ["Small", "small"], ["Medium", "medium"], ["Large", "large"], ["Enterprise", "enterprise"]],
                @filters[:size]
              ),
              { include_blank: false },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors",
              data: {
                organization_filter_target: "size",
                action: "change->organization-filter#filterChange"
              } %>
        </div>

        <!-- Sort By Filter -->
        <div>
          <%= f.label :sort_by, "Sort By", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :sort_by,
              options_for_select(
                [["Most Recent", "recent"], ["Oldest", "oldest"], ["Name (A-Z)", "name_asc"], ["Name (Z-A)", "name_desc"]],
                @filters[:sort_by]
              ),
              { include_blank: false },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors",
              data: {
                organization_filter_target: "sortBy",
                action: "change->organization-filter#filterChange"
              } %>
        </div>
      </div>

      <!-- Clear Filters Button -->
      <div class="flex justify-end">
        <button type="button"
                data-organization-filter-target="clearBtn"
                data-action="click->organization-filter#clearFilters"
          class="text-gray-600 hover:text-gray-900 px-4 py-2 rounded-lg border border-gray-300 hover:border-gray-400 transition-colors text-sm font-medium hidden">
          <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          Clear Filters
        </button>
      </div>
    <% end %>
  </div>

  <!-- Organizations Table Container -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <!-- Results Summary -->
    <div id="results-summary" class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <p class="text-sm text-gray-700">
        Showing <span class="font-semibold"><%= @organizations.count %></span> of <span class="font-semibold"><%= @total_organizations %></span> organizations
      </p>
    </div>

    <!-- Organizations Table -->
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Organization</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Plan</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Members</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% if @organizations.any? %>
            <% @organizations.each do |organization| %>
              <%= render "organization_row", organization: organization %>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-8 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5.5m0 0H9m11 0v-3.5a6.5 6.5 0 00-13 0V21"></path>
                </svg>
                <p class="mt-4 text-sm font-medium text-gray-900">No organizations found</p>
                <p class="mt-2 text-sm text-gray-500">Try adjusting your search or filter criteria</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
