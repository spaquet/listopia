<!-- app/views/admin/users/edit.html.erb -->
<div class="max-w-2xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Edit User</h1>
      <p class="text-gray-600 mt-1"><%= @user.email %></p>
    </div>
    <%= link_to admin_user_path(@user), class: "text-gray-600 hover:text-gray-900 px-4 py-2 rounded-lg border border-gray-300 hover:border-gray-400 transition-colors duration-200" do %>
      <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back
    <% end %>
  </div>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= form_with(model: [:admin, @user], local: true, class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <!-- User Information Section -->
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">User Information</h2>
        <div class="space-y-4">
          <!-- Name -->
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, 
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                placeholder: "Full Name" %>
          </div>
          <!-- Email -->
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= form.email_field :email, 
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                placeholder: "Email Address" %>
          </div>
          <!-- Bio -->
          <div>
            <%= form.label :bio, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :bio, 
                rows: 4,
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                placeholder: "User bio" %>
          </div>
          <!-- Avatar URL -->
          <div>
            <%= form.label :avatar_url, "Avatar URL", class: "block text-sm font-medium text-gray-700" %>
            <%= form.url_field :avatar_url, 
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                placeholder: "https://example.com/avatar.jpg" %>
          </div>
        </div>
      </div>
      <!-- Preferences Section -->
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Preferences</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Locale -->
          <div>
            <%= form.label :locale, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :locale, locale_options, {}, 
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
          </div>
          <!-- Timezone -->
          <div>
            <%= form.label :timezone, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :timezone, timezone_options, {}, 
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
          </div>
        </div>
      </div>
      <!-- Password Section (Optional) -->
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Password (Leave blank to keep current)</h2>
        <div class="space-y-4">
          <!-- Password -->
          <div>
            <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password, 
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                placeholder: "New password" %>
          </div>
          <!-- Password Confirmation -->
          <div>
            <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password_confirmation, 
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                placeholder: "Confirm password" %>
          </div>
        </div>
      </div>
      <!-- Admin Notes Section -->
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Admin Notes</h2>
        <div>
          <%= form.label :admin_notes, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :admin_notes, 
              rows: 3,
              class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
              placeholder: "Internal notes about this user" %>
        </div>
      </div>
      <!-- Form Actions -->
      <div class="flex items-center justify-between pt-4 border-t border-gray-200">
        <%= link_to admin_user_path(@user), class: "text-gray-600 hover:text-gray-900 px-4 py-2 rounded-lg border border-gray-300 hover:border-gray-400 transition-colors duration-200" do %>
          Cancel
        <% end %>
        <%= form.submit "Update User", class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium" %>
      </div>
    <% end %>
  </div>
</div>