<!-- Pending Invitation Row -->
<div id="invitation_<%= invitation.id %>" class="grid grid-cols-12 gap-0 px-6 py-4 border-b border-gray-200 hover:bg-gray-50 transition-colors items-center bg-yellow-50">
  <!-- Name & Email (4 cols) -->
  <div class="col-span-3 flex items-center min-w-0">
    <div class="h-10 w-10 rounded-full bg-yellow-200 flex items-center justify-center text-yellow-800 font-semibold text-sm flex-shrink-0">
      <%= invitation.email.first.upcase %>
    </div>
    <div class="ml-4 min-w-0 flex-1">
      <p class="text-sm font-medium text-gray-900 truncate">
        <%= invitation.metadata["name"].presence || invitation.email.split("@").first.capitalize %>
        <span class="text-xs text-gray-500 ml-1">(Pending)</span>
      </p>
      <p class="text-sm text-gray-500 truncate"><%= invitation.email %></p>
    </div>
  </div>

  <!-- Status Badge (2 cols) -->
  <div class="col-span-2">
    <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 whitespace-nowrap">
      Pending
    </span>
  </div>

  <!-- Role Badge (2 cols) -->
  <div class="col-span-2">
    <% role = invitation.metadata["role"] || "member" %>
    <% if role == "admin" %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 whitespace-nowrap">
        Admin
      </span>
    <% else %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 whitespace-nowrap">
        User
      </span>
    <% end %>
  </div>

  <!-- Email Verification (2 cols) -->
  <div class="col-span-2">
    <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800 whitespace-nowrap">
      N/A
    </span>
  </div>

  <!-- Actions (1 col) -->
  <div class="col-span-1 text-right">
    <button type="button" class="p-2 hover:bg-yellow-100 rounded transition-colors group relative" title="Resend invitation">
      <svg class="w-4 h-4 text-yellow-600 group-hover:text-yellow-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
    </button>
    <button type="button" class="p-2 hover:bg-red-100 rounded transition-colors group relative" title="Cancel invitation" data-invitation-id="<%= invitation.id %>">
      <svg class="w-4 h-4 text-red-600 group-hover:text-red-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
</div>
