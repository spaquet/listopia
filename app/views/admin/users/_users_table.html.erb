<!-- app/views/admin/users/_users_table.html.erb -->
<% if users.any? %>
  <!-- Table structure with fixed columns using CSS Grid -->
  <div class="divide-y divide-gray-200">
    <!-- Header Row -->
    <div class="grid grid-cols-12 gap-0 bg-gray-50 px-6 py-3 border-b-2 border-gray-200 sticky top-0 z-10">
      <!-- Name & Email (4 cols) -->
      <div class="col-span-3">
        <h3 class="text-xs font-semibold text-gray-700 uppercase tracking-wider">User</h3>
      </div>
      <!-- Status (2 cols) -->
      <div class="col-span-2">
        <h3 class="text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</h3>
      </div>
      <!-- Role (2 cols) -->
      <div class="col-span-2">
        <h3 class="text-xs font-semibold text-gray-700 uppercase tracking-wider">Role</h3>
      </div>
      <!-- Email Verification (2 cols) -->
      <div class="col-span-2">
        <h3 class="text-xs font-semibold text-gray-700 uppercase tracking-wider">Verified</h3>
      </div>
      <!-- Actions (1 col) -->
      <div class="col-span-1">
        <h3 class="text-xs font-semibold text-gray-700 uppercase tracking-wider text-right">Actions</h3>
      </div>
    </div>
    <!-- User Rows -->
    <div id="users-list">
      <% users.each do |user| %>
        <%= render "user_row", user: user, current_user: current_user %>
      <% end %>
      <!-- Pending Invitations -->
      <% if defined?(@pending_invitations) && @pending_invitations.any? %>
        <% @pending_invitations.each do |invitation| %>
          <%= render "invitation_row", invitation: invitation %>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="px-6 py-12 text-center">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No users found</h3>
    <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filters.</p>
  </div>
<% end %>