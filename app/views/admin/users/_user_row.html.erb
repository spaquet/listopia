<!-- app/views/admin/users/_user_row.html.erb -->
<div id="user_<%= user.id %>" class="flex items-center px-6 py-4 border-b border-gray-200 hover:bg-gray-50 transition-colors">
  <!-- Name + Email -->
  <div class="flex-1 flex items-center">
    <% if user.avatar_url.present? %>
      <img class="h-10 w-10 rounded-full object-cover" src="<%= user.avatar_url %>" alt="<%= user.name %>">
    <% else %>
      <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-semibold text-sm">
        <%= user.name.first.upcase %>
      </div>
    <% end %>
    <div class="ml-4">
      <p class="text-sm font-medium text-gray-900">
        <%= user.name %>
        <% if user == current_user %>
          <span class="text-xs text-gray-500 ml-2">(You)</span>
        <% end %>
      </p>
      <p class="text-sm text-gray-500"><%= user.email %></p>
    </div>
  </div>
  <!-- Status Badge -->
  <div class="w-32">
    <% status_color = case user.status
                      when "active" then "bg-green-100 text-green-800"
                      when "suspended" then "bg-red-100 text-red-800"
                      when "inactive" then "bg-gray-100 text-gray-800"
                      else "bg-gray-100 text-gray-800"
                      end %>
    <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full <%= status_color %>">
      <%= user.status.humanize %>
    </span>
  </div>
  <!-- Role Badge -->
  <div class="w-24">
    <% if user.admin? %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
        Admin
      </span>
    <% else %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
        User
      </span>
    <% end %>
  </div>
  <!-- Email Verification Status -->
  <div class="w-32">
    <% if user.email_verified_at.present? %>
      <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        Verified
      </span>
    <% else %>
      <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        Pending
      </span>
    <% end %>
  </div>
  <!-- Actions - 4 Icon Buttons on one line -->
  <div class="flex items-center justify-end space-x-3">
    <!-- Suspend/Resume Button (grey) -->
    <% if current_user != user %>
      <% if user.active? %>
        <%= link_to toggle_status_admin_user_path(user), method: :patch, class: "text-gray-700 hover:text-gray-900 transition-colors", title: "Suspend user" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6 4h12v16H6z"/>
          </svg>
        <% end %>
      <% elsif user.suspended? %>
        <%= link_to toggle_status_admin_user_path(user), method: :patch, class: "text-gray-700 hover:text-gray-900 transition-colors", title: "Reactivate user" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        <% end %>
      <% end %>
    <% end %>
    <!-- Edit Button (grey) -->
    <%= link_to edit_admin_user_path(user), class: "text-gray-700 hover:text-gray-900 transition-colors", title: "Edit user" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    <% end %>
    <!-- Make Admin/Remove Admin Button (grey) -->
    <% if current_user != user %>
      <% if user.admin? %>
        <%= link_to toggle_admin_admin_user_path(user), method: :patch, class: "text-gray-700 hover:text-gray-900 transition-colors", title: "Remove admin" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        <% end %>
      <% else %>
        <%= link_to toggle_admin_admin_user_path(user), method: :patch, class: "text-gray-700 hover:text-gray-900 transition-colors", title: "Make admin" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        <% end %>
      <% end %>
    <% end %>
    <!-- Delete Button (red trash icon) -->
    <% if current_user != user %>
      <%= link_to admin_user_path(user), method: :delete, data: { turbo_confirm: "Delete this user permanently? This action cannot be undone." }, class: "text-red-700 hover:text-red-900 transition-colors", title: "Delete user" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    <% end %>
  </div>
</div>