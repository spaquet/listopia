<!-- app/views/admin/users/_user_row.html.erb -->
<tr id="user_<%= user.id %>" class="hover:bg-gray-50 transition-colors">
  <!-- Name -->
  <td class="px-6 py-4">
    <div class="flex items-center">
      <% if user.avatar_url.present? %>
        <img class="h-10 w-10 rounded-full object-cover" src="<%= user.avatar_url %>" alt="<%= user.name %>">
      <% else %>
        <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-semibold">
          <%= user.name.first.upcase %>
        </div>
      <% end %>
      <div class="ml-4">
        <div class="flex items-center gap-2">
          <p class="text-sm font-medium text-gray-900"><%= user.name %></p>
          <% if user == current_user %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
              You
            </span>
          <% end %>
        </div>
        <p class="text-sm text-gray-500"><%= user.email %></p>
      </div>
    </div>
  </td>
  <!-- Status Badge -->
  <td class="px-6 py-4 whitespace-nowrap">
    <% status_color = case user.status
                      when "active" then "bg-green-100 text-green-800"
                      when "suspended" then "bg-red-100 text-red-800"
                      when "inactive" then "bg-gray-100 text-gray-800"
                      else "bg-gray-100 text-gray-800"
                      end %>
    <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full <%= status_color %>">
      <%= user.status.humanize %>
    </span>
  </td>
  <!-- Role Badge -->
  <td class="px-6 py-4 whitespace-nowrap">
    <% if user.admin? %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
        Admin
      </span>
    <% else %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
        User
      </span>
    <% end %>
  </td>
  <!-- Email Verification Status -->
  <td class="px-6 py-4 whitespace-nowrap text-center">
    <% if user.email_verified_at.present? %>
      <div class="inline-flex text-green-600">
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" title="Email verified">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
        </svg>
      </div>
    <% else %>
      <div class="inline-flex text-yellow-600">
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" title="Email unverified">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.492-1.646-1.743-2.98l5.58-9.92zM9 13a1 1 0 11-2 0 1 1 0 012 0zm-.25-6.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" clip-rule="evenodd"></path>
        </svg>
      </div>
    <% end %>
  </td>
  <!-- Actions -->
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center justify-end gap-0">
      <!-- Toggle Status Button (Play/Pause style) -->
      <% if current_user != user %>
        <% if user.active? %>
          <!-- Suspend: Pause Icon -->
          <%= link_to toggle_status_admin_user_path(user),
              method: :post,
              class: "inline-flex items-center justify-center p-1.5 text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded transition-colors duration-200",
              title: "Suspend user",
              data: {
                turbo_confirm: "Suspend this user? They won't be able to access their account."
              } do %>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M5.75 1.5a.75.75 0 00-.75.75v15.5c0 .414.336.75.75.75h1.5a.75.75 0 00.75-.75V2.25a.75.75 0 00-.75-.75h-1.5zM12.75 1.5a.75.75 0 00-.75.75v15.5c0 .414.336.75.75.75h1.5a.75.75 0 00.75-.75V2.25a.75.75 0 00-.75-.75h-1.5z"></path>
            </svg>
          <% end %>
        <% else %>
          <!-- Activate: Play Icon -->
          <%= link_to toggle_status_admin_user_path(user),
              method: :post,
              class: "inline-flex items-center justify-center p-1.5 text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded transition-colors duration-200",
              title: "Activate user",
              data: {
                turbo_confirm: "Reactivate this user? They'll be able to access their account again."
              } do %>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"></path>
            </svg>
          <% end %>
        <% end %>
      <% end %>
      <!-- Edit Link -->
      <%= link_to edit_admin_user_path(user),
          class: "inline-flex items-center justify-center p-1.5 text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded transition-colors duration-200",
          title: "Edit user" do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>
      <!-- Delete Link -->
      <% if current_user != user %>
        <%= link_to admin_user_path(user),
            method: :delete,
            class: "inline-flex items-center justify-center p-1.5 text-red-600 hover:text-red-700 hover:bg-red-50 rounded transition-colors duration-200",
            title: "Delete user",
            data: {
              turbo_confirm: "Are you sure? This will permanently delete this user and cannot be undone."
            } do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>