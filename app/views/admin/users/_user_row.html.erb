<!-- app/views/admin/users/_user_row.html.erb -->
<div id="user_<%= user.id %>" class="grid grid-cols-12 gap-0 px-6 py-4 border-b border-gray-200 hover:bg-gray-50 transition-colors items-center">
  <!-- Name & Email (4 cols) -->
  <div class="col-span-3 flex items-center min-w-0">
    <%= link_to admin_user_path(user), class: "flex items-center min-w-0 hover:opacity-80 transition-opacity" do %>
      <% if user.avatar_url.present? %>
        <img class="h-10 w-10 rounded-full object-cover shrink-0" src="<%= user.avatar_url %>" alt="<%= user.name %>">
      <% else %>
        <div class="h-10 w-10 rounded-full bg-linear-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
          <%= user.name.first.upcase %>
        </div>
      <% end %>
      <div class="ml-4 min-w-0 flex-1">
        <p class="text-sm font-medium text-gray-900 truncate">
          <%= user.name %>
          <% if user == current_user %>
            <span class="text-xs text-gray-500 ml-1">(You)</span>
          <% end %>
        </p>
        <p class="text-sm text-gray-500 truncate"><%= user.email %></p>
      </div>
    <% end %>
  </div>
  <!-- Status Badge (2 cols) -->
  <div class="col-span-2">
    <% has_pending_invitations = Invitation.where(user_id: user.id, status: "pending").exists? %>
    <% display_status = has_pending_invitations ? "pending" : user.status %>
    <% status_color = case display_status
                      when "active" then "bg-green-100 text-green-800"
                      when "suspended" then "bg-red-100 text-red-800"
                      when "pending" then "bg-yellow-100 text-yellow-800"
                      when "pending_verification" then "bg-yellow-100 text-yellow-800"
                      when "deactivated" then "bg-gray-100 text-gray-800"
                      else "bg-gray-100 text-gray-800"
                      end %>
    <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full <%= status_color %> whitespace-nowrap">
      <%= display_status.humanize %>
    </span>
  </div>
  <!-- Role Badge (2 cols) -->
  <div class="col-span-2">
    <% if user.admin? %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 whitespace-nowrap">
        Admin
      </span>
    <% else %>
      <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 whitespace-nowrap">
        User
      </span>
    <% end %>
  </div>
  <!-- Email Verification Status (2 cols) -->
  <div class="col-span-2">
    <% if user.email_verified_at.present? %>
      <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 whitespace-nowrap">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
        </svg>
        Verified
      </span>
    <% else %>
      <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 whitespace-nowrap">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        Unverified
      </span>
    <% end %>
  </div>
  <!-- Actions (1 col) -->
  <div class="col-span-1 flex items-center justify-end space-x-2">
    <% has_pending_invitations = Invitation.where(user_id: user.id, status: "pending").exists? %>
    <!-- Re-invite Button (for pending users) -->
    <% if has_pending_invitations %>
      <%= button_to resend_invitation_admin_user_path(user),
                   method: :post,
                   title: "Resend invitation",
                   class: "text-blue-500 hover:text-blue-700 p-2 rounded hover:bg-blue-50 transition-colors",
                   form_class: "inline" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
        </svg>
      <% end %>
    <% elsif user != current_user %>
      <!-- Suspend/Activate Button -->
      <% if user.status_active? %>
        <%= button_to toggle_status_admin_user_path(user),
                   method: :post,
                   title: "Suspend user",
                   class: "text-gray-500 hover:text-gray-700 p-2 rounded hover:bg-gray-200 transition-colors",
                   form_class: "inline" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
          </svg>
        <% end %>
      <% elsif user.status_suspended? %>
        <%= button_to toggle_status_admin_user_path(user),
                   method: :post,
                   title: "Activate user",
                   class: "text-gray-500 hover:text-gray-700 p-2 rounded hover:bg-gray-200 transition-colors",
                   form_class: "inline" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 5v14l11-7z"/>
          </svg>
        <% end %>
      <% end %>
    <% else %>
      <div class="p-2"></div>
    <% end %>
    <!-- Edit Button -->
    <% if policy(user).edit? && !has_pending_invitations %>
      <%= link_to edit_admin_user_path(user),
                  title: "Edit user",
                  class: "text-gray-500 hover:text-gray-700 p-2 rounded hover:bg-gray-200 transition-colors" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
        </svg>
      <% end %>
    <% end %>
    <!-- Delete Button -->
    <% if policy(user).destroy? %>
      <%= button_to admin_user_path(user), method: :delete,
                data: { turbo_confirm: "Are you sure? This action cannot be undone." },
                title: "Delete user",
                class: "text-red-500 hover:text-red-700 p-2 rounded hover:bg-red-50 transition-colors",
                form_class: "inline" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
      <% end %>
    <% end %>
  </div>
</div>