<%= turbo_stream.replace "current-org-button", partial: "shared/current_org_button" %>
<%= turbo_stream.replace "flash", partial: "shared/flash_messages", locals: { notice: "Switched to #{@organization.name}." } %>
<!-- Clear the modal frame by replacing it with an empty turbo frame -->
<%= turbo_stream.replace "org_switcher_modal" do %>
  <%= turbo_frame_tag "org_switcher_modal" %>
<% end %>
<!-- Reload the page to reflect the new organization's data -->
<script>
  // Use Turbo.visit instead of location.href to preserve Turbo state
  Turbo.visit(window.location.href, { action: "replace" });
</script>
