<%= form_with model: @organization, local: true, class: "space-y-6" do |f| %>
  <% if @organization.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-900 mb-2">
        <%= pluralize(@organization.errors.count, "error") %> prevented this organization from being saved:
      </h3>
      <ul class="text-sm text-red-700 list-disc list-inside">
        <% @organization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Organization Name", class: "block text-sm font-medium text-gray-900 mb-2" %>
    <%= f.text_field :name,
      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
      placeholder: "My Organization",
      required: true
    %>
    <p class="mt-1 text-sm text-gray-600">The name of your organization</p>
  </div>

  <div>
    <%= f.label :size, "Organization Size", class: "block text-sm font-medium text-gray-900 mb-2" %>
    <%= f.select :size,
      [["Small (1-10 members)", "small"], ["Medium (11-50 members)", "medium"], ["Large (51-200 members)", "large"], ["Enterprise (200+ members)", "enterprise"]],
      { selected: @organization.size || "small" },
      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
    %>
    <p class="mt-1 text-sm text-gray-600">Helps us provide the right support for your organization</p>
  </div>

  <div class="flex gap-2">
    <%= f.submit @organization.persisted? ? "Update Organization" : "Create Organization",
      class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium"
    %>
    <%= link_to "Cancel",
      @organization.persisted? ? organization_path(@organization) : organizations_path,
      class: "px-6 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium"
    %>
  </div>
<% end %>
