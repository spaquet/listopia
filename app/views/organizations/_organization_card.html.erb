<div class="bg-white rounded-lg border border-gray-200 p-4 hover:shadow-md transition">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <h2 class="text-lg font-semibold text-gray-900">
        <%= link_to organization.name, organization_path(organization), class: "hover:text-blue-600" %>
      </h2>
      <p class="text-sm text-gray-600 mt-1">
        <%= organization.users.count %> members Â· Created <%= time_ago_in_words(organization.created_at) %> ago
      </p>
      <div class="mt-2 flex gap-2">
        <span class="inline-block px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
          <%= organization.size.titleize %>
        </span>
        <span class="inline-block px-2 py-1 text-xs font-medium rounded-full <%= organization.status_active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= organization.status.titleize %>
        </span>
      </div>
    </div>
    <div class="flex gap-2">
      <% if policy(organization).show? %>
        <%= link_to "View", organization_path(organization), class: "px-3 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded" %>
      <% end %>
      <% if policy(organization).update? %>
        <%= link_to "Edit", edit_organization_path(organization), class: "px-3 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded" %>
      <% end %>
      <% if policy(organization).destroy? %>
        <%= link_to "Delete", organization_path(organization), method: :delete, data: { confirm: "Are you sure?" }, class: "px-3 py-1 text-sm bg-red-100 text-red-700 hover:bg-red-200 rounded" %>
      <% end %>
    </div>
  </div>
</div>
