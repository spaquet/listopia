<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @organization.name %></h1>
      <p class="mt-2 text-gray-600">
        <span class="inline-block px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
          <%= @organization.size.titleize %>
        </span>
        <span class="inline-block px-2 py-1 ml-2 text-xs font-medium rounded-full <%= @organization.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= @organization.status.titleize %>
        </span>
      </p>
    </div>
    <div class="flex gap-2">
      <% if policy(@organization).update? %>
        <%= link_to "Edit", edit_organization_path(@organization), class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg" %>
      <% end %>
      <% if policy(@organization).manage_members? %>
        <%= link_to "Manage Members", organization_members_path(@organization), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-sm text-gray-600">Total Members</div>
      <div class="text-3xl font-bold text-gray-900"><%= @organization.users.count %></div>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-sm text-gray-600">Teams</div>
      <div class="text-3xl font-bold text-gray-900"><%= @organization.teams.count %></div>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-sm text-gray-600">Lists</div>
      <div class="text-3xl font-bold text-gray-900"><%= @organization.lists.count %></div>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Organization Details</h2>
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <dt class="text-sm font-medium text-gray-600">Slug</dt>
        <dd class="mt-1 text-gray-900"><%= @organization.slug %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-600">Created</dt>
        <dd class="mt-1 text-gray-900"><%= @organization.created_at.strftime("%B %d, %Y") %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-600">Created By</dt>
        <dd class="mt-1 text-gray-900"><%= @organization.creator.email %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-600">Status</dt>
        <dd class="mt-1">
          <span class="inline-block px-2 py-1 text-xs font-medium rounded-full <%= @organization.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @organization.status.titleize %>
          </span>
        </dd>
      </div>
    </dl>
  </div>

  <% if policy(@organization).manage_members? %>
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Recent Members</h2>
      <div class="space-y-3">
        <% @organization.organization_memberships.active.order(joined_at: :desc).limit(5).each do |membership| %>
          <div class="flex items-center justify-between py-3 border-b last:border-0">
            <div>
              <p class="font-medium text-gray-900"><%= membership.user.name %></p>
              <p class="text-sm text-gray-600"><%= membership.user.email %></p>
            </div>
            <div class="flex items-center gap-3">
              <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                <%= membership.role.titleize %>
              </span>
              <% if policy(@organization).manage_members? %>
                <%= link_to "Manage", organization_member_path(@organization, membership), class: "text-sm text-blue-600 hover:text-blue-800" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to "View All Members", organization_members_path(@organization), class: "mt-4 inline-block text-blue-600 hover:text-blue-800 text-sm font-medium" %>
    </div>
  <% end %>

  <div class="flex gap-2">
    <% if policy(@organization).suspend? && @organization.active? %>
      <%= link_to "Suspend Organization", organization_suspend_path(@organization), method: :post, data: { confirm: "Are you sure? This will prevent all members from accessing the organization." }, class: "px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700" %>
    <% elsif policy(@organization).reactivate? && @organization.suspended? %>
      <%= link_to "Reactivate Organization", organization_reactivate_path(@organization), method: :post, class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" %>
    <% end %>
    <% if policy(@organization).destroy? %>
      <%= link_to "Delete Organization", organization_path(@organization), method: :delete, data: { confirm: "Are you sure? This action cannot be undone." }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" %>
    <% end %>
  </div>
</div>
