<%# app/views/list_items/_item.html.erb %>
<%# Handle current_user parameter for both direct rendering and turbo stream broadcasting %>
<% user = local_assigns[:current_user] || Current.user || (respond_to?(:current_user) ? current_user : nil) %>
<%= turbo_frame_tag "list_item_#{item.id}" do %>
  <div class="flex items-start space-x-3 p-4 hover:bg-gray-50 group transition-colors duration-200" 
       id="list_item_<%= item.id %>">
    <!-- Completion Checkbox -->
    <% if user && can_access_list?(item.list, user, :edit) %>
      <% checkbox_classes = "flex-shrink-0 w-5 h-5 border-2 rounded hover:border-blue-500 transition-colors duration-200 cursor-pointer" %>
      <% checkbox_classes += item.status_completed? ? " bg-blue-500 border-blue-500" : " border-gray-300 bg-transparent" %>
      <%= button_to toggle_completion_list_list_item_path(item.list, item),
                    method: :patch,
                    data: { turbo_stream: true },
                    form: { class: "mt-1" },
                    class: checkbox_classes do %>
        <% if item.status_completed? %>
          <svg class="w-3 h-3 text-white m-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
        <% end %>
      <% end %>
    <% else %>
      <!-- Read-only checkbox for users without edit permissions -->
      <% readonly_classes = "flex-shrink-0 w-5 h-5 border-2 rounded mt-1" %>
      <% readonly_classes += item.status_completed? ? " bg-blue-500 border-blue-500" : " border-gray-300" %>
      <div class="<%= readonly_classes %>">
        <% if item.status_completed? %>
          <svg class="w-3 h-3 text-white m-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
        <% end %>
      </div>
    <% end %>
    <!-- Content -->
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <div class="flex items-center space-x-2 mb-1">
            <%= item_type_icon(item.item_type) %>
            <h3 class="text-sm font-medium text-gray-900 <%= 'line-through text-gray-500' if item.status_completed? %>">
              <%= item.title %>
            </h3>
            <%= priority_badge(item) %>
          </div>
          <!-- Description -->
          <% if item.description.present? %>
            <p class="text-sm text-gray-600 mt-1 <%= 'line-through' if item.status_completed? %>">
              <%= truncate(item.description, length: 100) %>
            </p>
          <% end %>
          <!-- Meta Information -->
          <div class="flex items-center space-x-4 mt-2 text-xs text-gray-500">
            <% if item.due_date.present? %>
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="<%= 'text-red-600 font-medium' if item.overdue? %>">
                  <%= item.due_date.strftime('%b %d, %Y') %>
                </span>
                <% if item.overdue? %>
                  <span class="text-red-600">(Overdue)</span>
                <% end %>
              </div>
            <% end %>
            <% if item.assigned_user.present? %>
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span><%= item.assigned_user.name %></span>
              </div>
            <% end %>
            <!-- Status Badge (optional, if you want to show in_progress status) -->
            <% if item.status_in_progress? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                In Progress
              </span>
            <% end %>
          </div>
        </div>
        <!-- Actions -->
        <% if user && can_access_list?(item.list, user, :edit) %>
          <div class="flex items-center space-x-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <%= link_to edit_list_list_item_path(item.list, item), 
                       class: "text-gray-400 hover:text-gray-600",
                       data: { turbo_frame: "list_item_#{item.id}" } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
            <%= button_to list_list_item_path(item.list, item),
                         method: :delete,
                         data: { 
                           turbo_confirm: "Are you sure you want to delete this item?",
                           turbo_stream: true
                         },
                         class: "text-gray-400 hover:text-red-600" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>