<!-- app/views/list_items/form_errors.turbo_stream.erb -->
<%= turbo_stream.replace "new_list_item" do %>
  <% if can_edit_list?(@list, current_user) %>
    <%= render "list_items/quick_add_form", list: @list, list_item: @list_item %>
  <% end %>
<% end %>
<%= turbo_stream.update "flash-messages" do %>
  <%= render "shared/flash_messages" %>
<% end %>